<!DOCTYPE html>

<head>
  <title>Suraksha SOS</title>


  <link rel="icon" type="image/x-icon" href="./assets/favicon.ico" />
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js">    </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
  <link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css"
    rel="stylesheet" type="text/css" />
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <form class="ui form"  action="/login" method="POST">

  <div class="ui  container" style="margin-top: 5%">
    <div class="ui grid center aligned">
      <div class="row">
        <div class="sixteen wide tablet six wide computer column catcpa">
          <div class="ui left aligned segment">

            <div class="ui form" >

              <h1 class="ui header center aligned loginbox">

                <img src="/img/final_logo.png" class="ui  image" />

                <div class="content">
                  LOGIN
                  <div class="sub header">Suraksha SOS</div>
                </div>
              </h1>

              <div class="field">
                <label>
                  Username:
                </label>
                <div class="ui action fluid icon input">
                  <input name="username" type="text" id="username" autocomplete="off" />
                  
                </div>

              </div>
              <div class="field">
                <label>
                  Password:
                </label>
                <div class="ui fluid icon input">
                  <input name="password" type="password" id="password" autocomplete="off" />
                  <i class="icon key"></i>
                </div>
              </div>

              <div class="field">
                <!-- <a id="LinkButton1" class="ui teal right labeled icon button fluid" href="#">Login <i
                    class="icon sign in"></i></a> -->
                   
                    <button class="ui inverted green button" type="submit" value="Login">LOGIN</button>

                
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </form>





  <script>
    $(document).ready(function () {
      var colors = [
        "#F25F5C",
        "#FFE066",
        "#247BA0",
        "#70C1B3",
        "#E71D36",
        "#E83F6F",
        "#32936F"
      ];
      var rand = Math.floor(Math.random() * colors.length);
      $("body").css("background-color", colors[rand]);
    });
  
  </script>


</body>

</html>